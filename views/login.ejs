<!DOCTYPE html>
<html lang="pt-br">
	<!--HEAD DA PAGINA-->
	<%- include('./partials/head') %>

<body>
	<!-- HEADER -->
	<%- include('./partials/header') %>
	<!-- NAVIGATION -->
	<%- include('./partials/nav') %>
<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
	<!-- container -->
	<% if (mensagem !=''){ %>
		<div class="alert col-md-12">
			<span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
			<%=mensagem%>
		</div>
		<% } %>
	<div class="container">
		<!-- row -->
		<div class="row">
			<div class="col-md-12">
				<h3 class="breadcrumb-header">ACESSAR SUA CONTA</h3>
				
			</div>
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">

			<div class="col-md-7" >
				<!-- Billing Details -->
				<form action="/login" method="POST">
				<div class="billing-details" >
					<div class="section-title">
						<h3 class="title">Entrar</h3>
					</div>
					<div class="form-group">
						<input class="input" type="email" name="email" placeholder="Digite seu email">
					</div>
					<div class="form-group">
						<input class="input" type="password" name="senha" placeholder="Digite sua senha">
					</div>
					
					
					<button type="submit" class="primary-btn order-submit">Entrar</button>
				</div>
				</form>
				

				<div class="form-group">
					<br>
					<div class="input-checkbox">
						<input type="checkbox" id="create-account">
						<label for="create-account">
							<span></span>
							NÃ£o tem uma conta?
						</label>
						<div class="caption">
							<a href="../perfil" class="second-btn order-submit">Cadastrar</a>
						</div>
						
					</div>
					
				</div>
				<!-- /Billing Details -->
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
		<!-- /SECTION -->
		<%- include('./partials/redesSociais') %>
		<%- include('./partials/footer') %>
	</body>
</html>