<!DOCTYPE html>
<html lang="pt-br">
	<!--HEAD DA PAGINA-->
<%- include('./partials/head') %>

<body>
	<!-- HEADER -->
	<%- include('./partials/header') %>
	<!-- NAVIGATION -->
	<%- include('./partials/nav') %>

		<!-- BREADCRUMB -->
		<div id="breadcrumb" class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<div class="col-md-12">
						<h3 class="breadcrumb-header">Acessar sua Conta</h3>
						
					</div>
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		<!-- /BREADCRUMB -->

		<!-- SECTION -->
		<div class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">

					<div class="col-md-7" >
						<!-- Billing Details -->
						<div class="billing-details" >
							<div class="section-title">
								<h3 class="title">Entrar</h3>
							</div>
							<div class="form-group">
								<input class="input" type="email" name="email" placeholder="Digite seu email">
							</div>
							<div class="form-group">
								<input class="input" type="password" name="password" placeholder="Digite sua senha">
							</div>
							
							
							<a href="#" class="primary-btn order-submit">Entrar</a>
						</div>

						<div class="form-group">
							<div class="input-checkbox">
								<input type="checkbox" id="create-account">
								<label for="create-account">
									<span></span>
									Não tem uma conta?
								</label>
								<div class="caption">
									<a href="/cadastro.html" class="second-btn order-submit">Cadastrar</a>
								</div>
								
							</div>
							
						</div>
						<!-- /Billing Details -->

						
					<!-- Order Details -->
					<div class="col-md-9 order-details">
						<div class="section-title text-center">
							<h3 class="title">Seu carrinho</h3>
						</div>
						<div class="order-summary">
							<div class="order-col">
								<div><strong>ITEMS</strong></div>
								<div><strong>TOTAL</strong></div>
							</div>
							<div class="order-products">
								<div class="order-col">
									<div>1x Notebook LeNovo</div>
									<div>R$ 980,00</div>
								</div>
								<div class="order-col">
									<div>2x Headset Predator</div>
									<div>R$ 980,00</div>
								</div>
							</div>
							
							<div class="order-col">
								<div><strong>TOTAL</strong></div>
								<div><strong class="order-total">R$ 2.940,00</strong></div>
							</div>
						</div>
						<div class="payment-method">
							<div class="input-radio">
								<input type="radio" name="payment" id="payment-1">
								<label for="payment-1">
									<span></span>
									PIX
								</label>
								<div class="caption">
									<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
								</div>
							</div>
							<div class="input-radio">
								<input type="radio" name="payment" id="payment-2">
								<label for="payment-2">
									<span></span>
									Cartão de Crédito
								</label>
								<div class="caption">
									<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
								</div>
							</div>
							<div class="input-radio">
								<input type="radio" name="payment" id="payment-3">
								<label for="payment-3">
									<span></span>
									Boleto
								</label>
								<div class="caption">
									<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
								</div>
							</div>
						</div>
						<div class="input-checkbox">
							<input type="checkbox" id="terms">
							<label for="terms">
								<span></span>
								Eu li e aceito os <a href="#">termos e condições</a>
							</label>
						</div>
						<a href="#" class="primary-btn order-submit">Finalizar compra</a>
					</div>
					<!-- /Order Details -->
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		<!-- /SECTION -->
		<%- include('./partials/redesSociais') %>
		<%- include('./partials/footer') %>
	</body>
</html>