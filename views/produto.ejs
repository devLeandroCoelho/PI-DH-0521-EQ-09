<!DOCTYPE html>
<html lang="pt-br">
<!--HEAD DA PAGINA-->
<%- include('./partials/head') %>

	<body>
		<!-- HEADER -->
		<%- include('./partials/header') %>

			<!-- NAVIGATION -->
			<%- include('./partials/nav') %>

				<!-- BREADCRUMB -->
				<div id="breadcrumb" class="section">
					<!-- container -->
					<div class="container">
						<!-- row -->
						<div class="row">
							<div class="col-md-12">
								<ul class="breadcrumb-tree">
									<li><a href="#">Home</a></li>
									<li><a href="#"><%= anuncio.titulo %></a></li>
								</ul>
							</div>
						</div>
						<!-- /row -->
					</div>
					<!-- /container -->
				</div>
				<!-- /BREADCRUMB -->

				<!-- SECTION -->
				<div class="section">
					<!-- container -->
					<div class="container">
						<!-- row -->
						<div class="row">
							<!-- /Product main img -->
							<div class="col-md-7">
								<!-- Product thumb imgs -->
								<div class="product-img">
									<img src="<%= anuncio.imagens[0].imagem %>" alt="" >
								</div>
							</div>
							<!-- /Product thumb imgs -->
							<!-- Product details -->
							<div class="col-md-5">
								<div class="product-details">
									<h2 class="product-name">
										<%= anuncio.titulo %>
									</h2>
									<div>
										<h3 class="product-price">
											<%= anuncio.valor.toLocaleString('pt-br',{style: 'currency', currency: 'BRL'}) %>
										</h3>
									</div>
									<p>
										<%= anuncio.descricao %>
									</p>
									<p>
									Telefone para contato:  <%= anuncio.telefone %>
									</p>
									<div class="add-to-cart">
										<button class="add-to-cart-btn"><i class=""></i>Favoritos</button>
									</div>
									<ul class="product-links">
										<li>Categoria:</li>
										<li><a href="#">
												<%= anuncio.categoria_id %>
											</a></li>

									</ul>
								</div>
							</div>
							<!-- /Product details -->
						</div>
					</div>
					<!-- /row -->
				</div>
				<!-- /container -->
				</div>
				<!-- /SECTION -->
				<%- include('./partials/produtosRelacionados',{catId = anuncio.categoria_id}) %>
					<%- include('./partials/redesSociais') %>
						<%- include('./partials/footer') %>
	</body>
</html>